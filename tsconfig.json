{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    },
    "types": ["jest"]
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
